terraform {
  required_providers {
    azurerm = {
      source  = "hashicorp/azurerm"
      version = "=2.99.0"
    }
  }
}
provider "azurerm" {
  features{}
}


resource "azurerm_resource_group" "rggg2" {
  name     = "${var.resource_group}"
  location = "${var.location}"
}
resource "azurerm_virtual_network" "myvn" {
  name                = "${var.vnet}"
  location            = "${azurerm_resource_group.rggg2.location}"
  resource_group_name = "${azurerm_resource_group.rggg2.name}"
  address_space       = ["${var.address_space}"]
}

resource "azurerm_subnet" "subnet" {
  name = "${var.subnet_name[count.index]}"
  virtual_network_name = "${azurerm_virtual_network.myvn.name}"
  resource_group_name = "${azurerm_resource_group.rggg2.name}"
  address_prefix       = "${var.subnet_prefix[count.index]}"
  count  =  "${length(var.subnet_name)}"
}